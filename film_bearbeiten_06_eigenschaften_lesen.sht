        ISTVIDEO_HOCH="$(echo "${ISTVIDEOBREIT} ${ISTVIDEOPixel} ${ISTVIDEODispl}" | awk '{printf("%.0f\n",$1*$2/$3)}')"
fi

# evtl. lohnt es sich, hier die Genauigkeit zu erhöhen
if [ -z "${ISTVIDEOPixel}" ] ; then
